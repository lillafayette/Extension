{
  "manifest_version": 3,
  "name": "HuShhh",
  "version": "1.0",
  "description": "Extension with buttons to play looping sounds in the background.",
  "permissions": ["offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "offscreen": {
    "permissions": ["audio"],
    "url": "offscreen.html",
    "reasons": ["AUDIO_PLAYBACK"]
  }
}